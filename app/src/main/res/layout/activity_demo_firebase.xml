<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".DemoFirebase">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"


            android:layout_marginTop="85dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="12dp"
            android:text="All cloth have Washing Cost Rs 8"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="131dp"
            android:onClick="doSum"
            android:text="Total Cloth"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="680dp"
            android:layout_marginEnd="131dp"
            android:onClick="doMul"
            android:text="Estimate"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:text="Happy to serve You!"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"

            />


        <Button
            android:id="@+id/placeorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40dp"

            android:background="#90CAF9"
            android:text="Place Order"
            android:textColor="@color/black" />

        <GridLayout
            android:layout_width="391dp"
            android:layout_height="521dp"
            android:layout_below="@+id/title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:rowCount="3">

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tshirt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T-Shirt"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tshirt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="T-Shirt Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />
                    "
                    "


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:src="@drawable/blazer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blazer"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/blazer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Blazer Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />
                    "
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/saree" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saree"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/saree1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Saree Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />
                    "
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pant"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pant1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Pant Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:id="@+id/bl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blanket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blanket"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/blanket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Blanket Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bedsheet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bedsheet"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/bedsheet1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Bedsheet Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    "
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>